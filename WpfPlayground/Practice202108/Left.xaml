<UserControl x:Class="WpfPlayground.Practice202108.Left"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPlayground.Practice202108"
             mc:Ignorable="d" 
             Background="LightGray"
             d:DesignHeight="200" d:DesignWidth="200">
    
    <Grid Margin="5">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="AliceBlue" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
            
            <TextBlock Text="Algo step 1" >
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding ShowDataCommand}" MouseAction="LeftClick"/>
                </TextBlock.InputBindings>                
            </TextBlock>
            <TextBlock Text="Algo step 2" >
                
            </TextBlock>
        </StackPanel>
            
    </Grid>
</UserControl>
