<Window x:Class="WpfPlayground.Projects.HtmlTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPlayground.Projects"
        mc:Ignorable="d"
        Title="HtmlTemplateEditor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Template editor tab -->
        <TabControl Grid.Column="0" Margin="5">
            <TabItem Header="Template">
                <TextBox Text="{Binding TemplateHtml, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="14"/>
            </TabItem>
        </TabControl>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#DDD"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns"/>

        <!-- Right: Preview, Variables, Diff -->
        <TabControl Grid.Column="2" Margin="5"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Preview">
                <WebBrowser x:Name="HtmlPreview"/>
            </TabItem>
            <TabItem Header="Variables">
                <DataGrid ItemsSource="{Binding Variables}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Display Text" Binding="{Binding DisplayText}" />
                        <DataGridTextColumn Header="Type" Binding="{Binding VariableType}" />
                        <DataGridTextColumn Header="Default Value" Binding="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Diff">
                <TextBox Text="{Binding DiffText, Mode=OneWay}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="14"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
